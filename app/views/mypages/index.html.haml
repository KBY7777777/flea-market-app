    = render partial: "/layouts/main-header"


  -#コンテンツ部分
  %main.L-Container.clearfix

    .L-Content
      %section.MypageUserIcon
        = link_to "/" do
          %figure
            = image_tag "//static.mercdn.net/images/member_photo_noimage_thumb.png"
